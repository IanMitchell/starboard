		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-xo": "^0.41.0",
		"eslint-config-xo-typescript": "^0.52.0",
		"eslint-import-resolver-typescript": "^2.7.1",
		"prettier": "^2.7.1",
		"prisma": "^4.2.0",
		"ts-node": "^10.9.1",
		"turbo": "^1.4.3",
		"typescript": "^4.7.4"
